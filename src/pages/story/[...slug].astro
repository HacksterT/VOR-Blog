---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const chapters = await getCollection('story', ({ data }) => !data.draft);
  return chapters.map((chapter) => ({
    params: { slug: chapter.id },
    props: { chapter },
  }));
}

const { chapter } = Astro.props;
const { Content } = await render(chapter);
---

<BaseLayout title={`Chapter ${chapter.data.chapter}: ${chapter.data.title}`} description={chapter.data.description}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <a
      href="/story"
      class="inline-flex items-center text-sm font-heading text-vor-muted hover:text-vor-gold-dark no-underline mb-8"
    >
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to My Story
    </a>

    <header class="mb-10">
      <span class="text-sm font-heading text-vor-gold-dark uppercase tracking-wider">
        Chapter {chapter.data.chapter}
      </span>
      <h1 class="mt-2 text-3xl sm:text-4xl md:text-5xl text-vor-charcoal leading-tight">
        {chapter.data.title}
      </h1>
      <p class="mt-4 text-lg text-vor-charcoal-light">{chapter.data.description}</p>
    </header>

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>
