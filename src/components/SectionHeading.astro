---
interface Props {
  title: string;
  subtitle?: string;
  linkHref?: string;
  linkText?: string;
}

const { title, subtitle, linkHref, linkText = 'View all' } = Astro.props;
---

<div class="flex items-end justify-between mb-8">
  <div>
    <h2 class="text-3xl md:text-4xl text-vor-charcoal">{title}</h2>
    {subtitle && (
      <p class="mt-2 text-vor-muted text-lg">{subtitle}</p>
    )}
  </div>
  {linkHref && (
    <a
      href={linkHref}
      class="hidden sm:inline-flex items-center gap-1 text-sm font-heading font-medium text-vor-gold-dark hover:text-vor-gold no-underline"
    >
      {linkText}
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  )}
</div>
