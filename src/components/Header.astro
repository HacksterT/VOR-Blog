---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/music', label: 'My Music' },
  { href: '/story', label: 'My Story' },
  { href: '/about', label: 'About' },
];

function isActive(href: string): boolean {
  if (href === '/') return pathname === '/';
  return pathname.startsWith(href);
}
---

<header class="bg-white/80 backdrop-blur-sm border-b border-vor-sand sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Site name -->
      <a href="/" class="text-xl font-heading font-bold text-vor-charcoal hover:text-vor-gold-dark no-underline">
        Voice of Repentance
      </a>

      <!-- Desktop nav -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                'text-sm font-heading font-medium tracking-wide uppercase no-underline transition-colors duration-200',
                isActive(link.href)
                  ? 'text-vor-gold-dark border-b-2 border-vor-gold pb-1'
                  : 'text-vor-charcoal-light hover:text-vor-gold-dark',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile hamburger -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-vor-charcoal hover:text-vor-gold-dark"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <ul class="flex flex-col gap-2">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                'block py-2 px-3 rounded-lg text-sm font-heading font-medium tracking-wide uppercase no-underline transition-colors duration-200',
                isActive(link.href)
                  ? 'text-vor-gold-dark bg-vor-warm'
                  : 'text-vor-charcoal-light hover:text-vor-gold-dark hover:bg-vor-warm',
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const icon = document.getElementById('menu-icon');

  btn?.addEventListener('click', () => {
    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', String(!expanded));
    menu?.classList.toggle('hidden');

    // Toggle hamburger â†” X icon
    if (icon) {
      icon.setAttribute(
        'd',
        expanded ? 'M4 6h16M4 12h16M4 18h16' : 'M6 18L18 6M6 6l12 12'
      );
    }
  });
</script>
