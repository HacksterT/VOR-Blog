---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
  subtitle?: string;
  tags?: string[];
  coverImage?: string;
}

const { title, date, description, subtitle, tags = [], coverImage } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <!-- Back link -->
    <a
      href="/blog"
      class="inline-flex items-center text-sm font-heading text-vor-muted hover:text-vor-gold-dark no-underline mb-8"
    >
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Blog
    </a>

    <!-- Header -->
    <header class="mb-10">
      <time class="text-sm font-heading text-vor-muted uppercase tracking-wider">
        {formattedDate}
      </time>
      <h1 class="mt-3 text-3xl sm:text-4xl md:text-5xl text-vor-charcoal leading-tight">
        {title}
      </h1>
      {(subtitle || description) && (
        <p class="mt-4 text-lg text-vor-charcoal-light">
          {subtitle || description}
        </p>
      )}
      <div class="mt-4 flex items-center gap-3">
        <span class="text-sm font-heading text-vor-muted">Troy Sybert</span>
      </div>

      {tags.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/blog/tags/${tag.toLowerCase()}`}
              class="text-xs font-heading px-2.5 py-1 rounded-full bg-vor-warm text-vor-charcoal-light hover:bg-vor-sand no-underline transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    {coverImage && (
      <img
        src={coverImage}
        alt={title}
        class="w-full rounded-xl mb-10"
      />
    )}

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
